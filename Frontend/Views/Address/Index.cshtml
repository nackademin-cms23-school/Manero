@model AddressViewModelList



<section class="address-page">
    <div class="container">
        @if (Model.Models.Any())
        {
            <div class="address-list">
                @{int i = 0;}
                @foreach (var address in Model.Models)
                {
                    <a class="address" asp-action="AddressDetails" asp-controller="Address" asp-route-key="@i">
                        <div class="address-icon">
                            <i class="fa-sharp fa-light fa-address-book"></i>
                        </div>
                        <div class="content">
                            @if (address.Title != null)
                            {
                                <h5>@address.Title</h5>
                            }
                            else
                            {
                                <h5>@address.AddressLine1</h5>
                            }

                            @address.AddressLine1, @address.City
                        </div>
                        <div class="edit-icon">
                            <i class="fa-light fa-pen-line"></i>
                        </div>
                    </a>
                    i++;
                }
            </div>
        }
        else
        {
            <div class="no-addresses">
                You have no addresses added.
            </div>
        }
        <div class="add-address">
            <a class="add-button" asp-action="AddAddress" asp-controller="Address">
                <i class="fa-light fa-plus"></i>
            </a>
            Add a new address
        </div>
    </div>
</section>