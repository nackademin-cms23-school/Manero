@model AccountViewModel


<section class="edit-account">
    <div class="container">
        <div class="profile-img">
            <img id="photoImage" src="@Model.ImageUrl" />
            <form onsubmit="handleSubmit(event)" enctype="multipart/form-data">
                <input id="file" type="file" name="file" hidden />
                <label for="file"><i class="fa-thin fa-camera"></i></label>
            </form>
        </div>

        <form method="post" asp-action="EditAccount" asp-controller="Profile">
            <input asp-for="UserId" hidden readonly />
            <input asp-for="ImageUrl" hidden readonly />

            <div class="form">
                <div class="input-group">
                    <label>FIRST NAME</label>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>

                <div class="input-group">
                    <label>LAST NAME</label>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>

                <div class="input-group">
                    <label>EMAIL</label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="input-group">
                    <label>PHONE NUMBER</label>
                    <input asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>

                <button class="btn btn-main" type="submit">SAVE CHANGES</button>
            </div>
        </form>
    </div>
</section>
