@model Frontend.ViewModels.ProductViewModel

@{

}

<section class="product-single">
@if (Model.Product != null)
{
    <div class="slider">
        <div class="picture"></div>
        <div class="pagination">
            <ul class="pag-ul">
                <li class="pag-li">1</li>
                <li class="pag-li">2</li>
                <li class="pag-li">3</li>
            </ul>

        </div>
        <hr>
    </div>

    <div class="container">

        <div class="product-content">
            <div class="top-content">
                <div class="margin-div">
                    <div class="title-heart">
                        <h2 class="product-title">@Model.Product!.ProductName</h2>
                        <div class="heart">
                            <svg class="heart-svg" xmlns="http://www.w3.org/2000/svg" width="20" height="18" viewBox="0 0 20 18" fill="none"><path xmlns="http://www.w3.org/2000/svg" d="M17.3667 2.84172C16.9411 2.41589 16.4357 2.07809 15.8795 1.84763C15.3233 1.61716 14.7271 1.49854 14.1251 1.49854C13.523 1.49854 12.9268 1.61716 12.3706 1.84763C11.8144 2.07809 11.309 2.41589 10.8834 2.84172L10.0001 3.72506L9.11673 2.84172C8.25698 1.98198 7.09092 1.49898 5.87506 1.49898C4.6592 1.49898 3.49314 1.98198 2.63339 2.84172C1.77365 3.70147 1.29065 4.86753 1.29065 6.08339C1.29065 7.29925 1.77365 8.46531 2.63339 9.32506L3.51673 10.2084L10.0001 16.6917L16.4834 10.2084L17.3667 9.32506C17.7926 8.89943 18.1304 8.39407 18.3608 7.83785C18.5913 7.28164 18.7099 6.68546 18.7099 6.08339C18.7099 5.48132 18.5913 4.88514 18.3608 4.32893C18.1304 3.77271 17.7926 3.26735 17.3667 2.84172V2.84172Z" stroke="#626262" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                        </div>
                    </div>
                </div>

                <div class="stars"><i class="fa-light fa-star"></i><i class="fa-light fa-star"></i><i class="fa-light fa-star"></i><i class="fa-light fa-star"></i><i class="fa-light fa-star"></i>(23)</div>

                <div class="margin-div">
                    <div class="adding">
                        <div class="pricing">
                                <p class="original @(Model.Product!.DiscountPrice.HasValue ? "discount-enabled" : "")">$@Model.Product!.OriginalPrice</p>
                                @if (@Model.Product!.DiscountPrice.HasValue)
                                {
                                    <p class="discount">$@Model.Product!.DiscountPrice.Value</p>
                                }
                        </div>
                        <div class="multiplyer">
                            - 1 +
                        </div>
                    </div>
                </div>
            </div>


            <div class="margin-div">
                <div class="size-section">
                    <h5 class="size-title">Size</h5>
                    <ul class="size-ul">

                        <li class="size-li active"><p class="size-letter">@Model.Product!.Size</p></li>

                    </ul>
                </div>
            </div>

            <div class="margin-div">
                <div class="color-section">
                    <h5>Color</h5>
                    <div class="list-colors">

                       <div class="color " style="--color: @(Model.Product!.Color.ToLower())"></div>

                    </div>
                </div>
            </div>

            <div class="margin-div">
                <div class="description-section">
                    <h5 class="description-title">Description</h5>
                    <p class="description-text">@Model.Product!.ProductDescription</p>
                </div>
            </div>
        </div>

        <div class="margin-div">
            <button class="btn btn-main buy-btn">+ ADD TO CART</button>
        </div>
        </div>
    }
    else
    {
        <p>Product not found.</p>
    }
</section>