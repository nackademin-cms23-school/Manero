@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<section class="signin">
    <div class="container">
        <div class="top-nav">
            <i class="fa-solid fa-chevron-left"></i>
            <h4>Sign in</h4>
        </div>
        <h1>Welcome Back!</h1>
        <p class="font-16 text">Sign in to continue</p>
        <form class="signin-form" method="post" asp-action="SignIn" asp-controller="Auth">

            <div class="alert">
                <div class="alert-error">
                    @ViewData["StatusMessage"]
                </div>
            </div>

            <div class="form-email input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>
            <div class="form-password input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>
            <div class="form-remember-forgot">
                <div class="checkbox-group">
                    <div class="input-group-checkbox">
                        <input asp-for="RememberMe">
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
                <a asp-action="ForgotPassword" asp-controller="ForgotPassword">Forgot password?</a>
            </div>
            <button class="btn btn-main" type="submit">SIGN IN</button>
        </form>

        <p class="have-account font-16">Don’t have an account? <a href="#">Sign up.</a></p>

        <div class="socials">
            <a class="facebook" href="./facebook.html">
                <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a class="twitter" href="#">
                <i class="fa-brands fa-twitter"></i>
            </a>
            <a class="google" href="#">
                <i class="fa-brands fa-google-plus-g"></i>
            </a>
        </div>
    </div>
</section>